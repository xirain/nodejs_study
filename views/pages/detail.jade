extends ../layout

block content
   .container
     .row
         .col-md-7
            embed(src="#{movie.flash}", allowFullScreen="true",quality="high",width="750",height="500", align="middle",type="application/x-shockwave-flash")
            //-embed(src="#{movie.flash}", allowFullScreen="true",quality="high",width="720",height="600",align="middle", type="application/x-shockwave-flash")
         .col-md-5
           dl.dl-horizontal
              dt 电影名字
              dd  #{movie.title}
              dt 导演
              dd  #{movie.doctor}
              dt 国家
              dd  #{movie.country}
              dt 语言
              dd  #{movie.language}
              dt 上映年份
              dd  #{movie.year}
              dt 海报
              dd  #{movie.poster}
              dt 简介
              dd  #{movie.introduction}