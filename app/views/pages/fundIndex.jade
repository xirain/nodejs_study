extends ../layout

block content
   .container
     .row
        each cat in categories
          .panel.panel-primary
            .panel-heading
              h3 #{cat.name}
            .panel-body
              if cat.funds && cat.funds.length >0 
                each item in funds
                  .col-md-2
                    .thumbnail
                       a(href="/fund/#{item._id}")
                       //- img(src="#{item.poster}",alt="#{item.title}")
                      .caption
                        h3 #{item.name}
                        p: a.btn.btn-primary(href="#{item.url}",role="button") 基金官网地址